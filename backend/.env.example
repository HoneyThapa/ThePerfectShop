# Database Configuration
POSTGRES_DB=theperfectshop
POSTGRES_USER=theperfectshop
POSTGRES_PASSWORD=theperfectshop123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://theperfectshop:theperfectshop123@localhost:5432/theperfectshop

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# Application Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Job Scheduling
ENABLE_SCHEDULED_JOBS=true
JOB_TIMEZONE=UTC

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# API Configuration
API_PORT=8000

# Health Checks
SKIP_DB_HEALTH_CHECK=false