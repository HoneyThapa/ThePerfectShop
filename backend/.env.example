# Database Configuration
POSTGRES_DB=theperfectshop
POSTGRES_USER=theperfectshop
POSTGRES_PASSWORD=theperfectshop123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://theperfectshop:theperfectshop123@localhost:5432/theperfectshop

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# Application Security
SECRET_KEY=your-secret-key-change-in-production-must-be-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
API_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/theperfectshop.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=csv,xlsx,xls

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Job Scheduling
ENABLE_SCHEDULED_JOBS=true
JOB_TIMEZONE=UTC
FEATURE_BUILD_SCHEDULE=0 2 * * *  # Daily at 2 AM
RISK_SCORING_SCHEDULE=0 3 * * *   # Daily at 3 AM
ACTION_GENERATION_SCHEDULE=0 4 * * *  # Daily at 4 AM

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# External Services (if applicable)
ML_SERVICE_URL=http://localhost:8001
ML_SERVICE_TIMEOUT=30

# Performance Tuning
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security Headers
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=default-src 'self'

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30